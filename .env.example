# Environment variables for OM Messenger Backend

# Server Configuration
PORT=8080
ALLOWED_ORIGINS=http://localhost:3000

# Public API base URL (used to generate absolute media URLs)
PUBLIC_API_BASE_URL=http://localhost:8080/api

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_NAME=om_messenger
DB_SSLMODE=disable

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# MinIO Configuration (S3-compatible object storage)
MINIO_ROOT_USER=om_minio_admin
MINIO_ROOT_PASSWORD=change_this_strong_password_min_32_chars
MINIO_ENDPOINT=minio:9000
MINIO_USE_SSL=false
MINIO_BUCKET_NAME=om-avatars

# Backend S3 settings (the app reads S3_*; docker-compose maps these from MINIO_*)
S3_ENDPOINT=minio:9000
S3_USE_SSL=false
S3_BUCKET=om-avatars
S3_ACCESS_KEY=om_minio_admin
S3_SECRET_KEY=change_this_strong_password_min_32_chars

# Optional: Redis (for future caching/pubsub)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
